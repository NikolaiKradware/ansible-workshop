<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>cicd_canary</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
		<directory>${project.basedir}/src/main/java/com/radware/vdirect/ansible/workshop/cicd/canary</directory>
		<outputDirectory>com/radware/vdirect/ansible/workshop/cicd/canary/</outputDirectory>
		<lineEnding>unix</lineEnding>
		<includes>
			<include>*.groovy</include>
		</includes>
	</fileSet>
    <fileSet>
		<directory>${project.basedir}/src/main/java/com/radware/vdirect/ansible/workshop/cicd/types</directory>
		<outputDirectory>com/radware/vdirect/ansible/workshop/cicd/types</outputDirectory>
		<lineEnding>unix</lineEnding>
		<includes>
			<include>*.groovy</include>
		</includes>
	</fileSet>
	<fileSet>
      <directory>${project.basedir}/src/main/templates/com/radware/vdirect/ansible/workshop/cicd/canary</directory>
      <outputDirectory>.</outputDirectory>
      <lineEnding>unix</lineEnding>
      <includes>
        <include>*.vm</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.basedir}/src/main/java/com/radware/vdirect/ansible/workshop/cicd/canary/workflow.xml</source>
      <outputDirectory>${file.separator}</outputDirectory>
      <lineEnding>unix</lineEnding>
    </file>
  </files>
</assembly>